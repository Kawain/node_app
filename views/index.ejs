<% include header %>
<div class="container my-4">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>カテゴリ</th>
        <th>タイトル</th>
        <th>注目度</th>
      </tr>
    </thead>
    <tbody>
      <% for (let v of lst) { %>
      <tr>
        <td><%= v.id %></td>
        <td><a href="/search/<%- v.cate_id %>"><%= v.name %></a></td>
        <td><a href="/detail/<%- v.id %>"><%= v.title %></a></td>
        <td><%= v.attention %></td>
      </tr>
      <% } %>
    </tbody>
  </table>

  <nav aria-label="Page navigation">
    <ul class="pagination" style="justify-content: center;">

      <% if(page.previous){ %>
      <li class="page-item"><a class="page-link"
          href="<%- page.prelink %>?p=<%- page.previous %>&amp;q=<%- q %>">Previous</a></li>
      <% } %>

      <% for (let v of page.range) { %>
      <% if(page.current === v){ %>
      <li class="page-item active"><a class="page-link"
          href="<%- page.prelink %>?p=<%- v %>&amp;q=<%- q %>"><%= v %></a>
      </li>
      <% } else { %>
      <li class="page-item"><a class="page-link" href="<%- page.prelink %>?p=<%- v %>&amp;q=<%- q %>"><%= v %></a></li>
      <% }%>
      <% }%>

      <% if(page.next){ %>
      <li class="page-item"><a class="page-link" href="<%- page.prelink %>?p=<%- page.next %>&amp;q=<%- q %>">Next</a>
      </li>
      <% } %>

    </ul>
  </nav>

</div>
<% include footer%>